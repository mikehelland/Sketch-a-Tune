<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:id="@+id/mainlayout"
              android:orientation="vertical"
        >

    <RelativeLayout android:id="@+id/fakeactionbar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#B0B0A0"
                    android:padding="2dip"
                    android:visibility="gone"
                    >

        <ImageView android:src="@drawable/supericon100"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:id="@+id/fab_icon"
                   />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/app_name"
                  android:layout_marginTop="14dip"
                  android:layout_toRightOf="@id/fab_icon"
                  android:id="@+id/fab_title"
                  android:fontFamily="Helvetica"
                  android:textStyle="bold"
                  android:textColor="#000000"
                  />

        <ImageView android:src="@android:drawable/ic_menu_share"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:id="@+id/fab_save"
                   android:layout_centerVertical="true"
                />

        <ImageView android:src="@drawable/ic_menu_archive"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_toLeftOf="@id/fab_save"
                   android:id="@+id/fab_open"
                   android:layout_marginRight="6dip"
                   android:layout_centerVertical="true"
                />

    </RelativeLayout>



    <include android:id="@+id/mpf" layout="@layout/lib_main"/>



</LinearLayout>

